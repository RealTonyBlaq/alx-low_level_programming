#!/usr/bin/env bash
CC=gcc
SRC = main.c school.c
OBJ := $(SRC:.c=.o)
NAME=school
RM=rm

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)

main.o: main.c m.h
	$(CC) -c main.c 

school.o: school.c m.h
	$(CC) -c school.c

re: oclean all
